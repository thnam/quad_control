.h6.blockTitle Voltage setpoint
.row
  .col-6
    .row
        input#vModeManual(value='vManual', name='vMode', type='radio')
        label(for='vModeManual') Manual
    .row
      .form-row
        label.col-7(for='manualPSS')  Pos. First Step
        input#manualPFS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='24.0', type='number')
        label.col-7(for='manualNSS')  Neg. First Step
        input#manualNFS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='24.0', type='number')

        label.col-7(for='manualPSS')  Pos. Second Step
        input#manualPSS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='27.0', type='number')
        label.col-7(for='manualNSS')  Neg. Second Step
        input#manualNSS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='27.0', type='number')

        label.col-7(for='manualPOS')  Pos. One Step
        input#manualPOS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='27.0', type='number')
        label.col-7(for='manualNOS')  Neg. One Step
        input#manualNOS.col-4(value='', name='', step='0.1', onchange='reflectVManual()', min='0.0', max='27.0', type='number')
  
  .col-6
    .row
      input#vModePreset(value='vPreset', name='vMode', checked='', type='radio')
      label(for='vModePreset') Preset
    .row
      .form-row
        label.col-6(for='vPreset') Set point
        input#vSetpoint.col-5(list='vSetpointList', onchange='reflectVPreset()', size='1')
        label.col-6(for='vStep') Step
        input#vStep.col-5(name='vStep', value='1.0', step='0.1', min='0.00', max='1.50', type='number')
        label.col-6(for='vInterval') Interval [s]
        input#vInterval.col-5(min='10', step='5', name='vInterval', value='30', type='number')

        datalist#vSetpointList
          option(value='0.0, 0.0')
          option(value='0.8, 1.6') 
          option(value='4.0, 5.0') 
          option(value='4.0, 7.0') 
          option(value='7.0, 10.0') 
          option(value='10.0, 13.0')
          option(value='10.7, 15.0')
          option(value='12.0, 15.0')
          option(value='12.6, 17.6')
          option(value='13.1, 18.2')
          option(value='14.4, 20.2')
          option(value='16.0, 23.0')

.row.mt-2.mb-2
  .col-4
    button#setVoltages.btn.btn-block.bg-success(type='submit') Set Voltages
  .col-4
      button#abortRamping.btn.btn-block.bg-danger(type='submit') Abort Ramping
  .col-4
      button#zeroVoltages.btn.btn-block.bg-warning(type='submit') Zero Voltages

.row.mt-2.mb-2
  .col-2
    button#p1kV.btn.btn-block.bg-info(type='submit') + 1 kV
  .col-2
    button#m1kV.btn.btn-block.bg-info(type='submit') - 1 kV
  .col-2
    button#m2kV.btn.btn-block.bg-info(type='submit') - 2 kV
  .col-2
    button#m3kV.btn.btn-block.bg-info(type='submit') - 3 kV
  .col-2
    button#m4kV.btn.btn-block.bg-info(type='submit') - 4 kV
  .col-2
    button#m10kV.btn.btn-block.bg-info(type='submit') - 10 kV
