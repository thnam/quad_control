mixin row(title)
  tr
    td= title
    each val, index in [1, 2, 3, 4]
      td(style='text-align:right', id="timing_tab_"+title.toLowerCase().replace(/\W+/g, '_')+"_active_"+index)
      td(style='text-align:right', id="timing_tab_"+title.toLowerCase().replace(/\W+/g, '_')+"_proposed_"+index)
        input(type='number')


.table-responsive
table.table.table-hover.table-bordered#timingInfoTable(style='width:80%,float:center')
  colgroup
    col(style='width: 20%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
    col(style='width: 10%')
  tbody
    tr
      th(rowspan='2')
        br
        | Timing unit is nanosecond,
        br
        | minimum increment is 10 ns.
      th(colspan='2',style='text-align:center')
        br
        | Pulser 1
        br
        | (Short pulse Two step, NTS)
        br
        input#cbEnablePulser1(type='checkbox', checked='true', data-toggle='toggle', data-onstyle='success', onchange='toggleEnablePulser(1)')

      th(colspan='2',style='text-align:center')
        br
        | Pulser 2
        br
        | (Short pulse One step, NOS)
        br
        input#cbEnablePulser2(type='checkbox', checked='true', data-toggle='toggle', data-onstyle='success', onchange='toggleEnablePulser(2)')
      th(colspan='2',style='text-align:center')
        br
        | Pulser 3
        br
        | (1-step Long pulse test, POS)
        br
        input#cbEnablePulser3(type='checkbox', checked='true', data-toggle='toggle', data-onstyle='success', onchange='toggleEnablePulser(3)')

      th(colspan='2',style='text-align:center')
        br
        | Pulser 4
        br
        | (2-step Long pulse test, PTS)
        br
        input#cbEnablePulser4(type='checkbox', checked='true', data-toggle='toggle', data-onstyle='success', onchange='toggleEnablePulser(4)')

    tr
      td(style='text-align:center') Active
      td(style='text-align:center') 
        button#btnSetP1Timing.btn.btn-block.btn-warning Set
      td(style='text-align:center') Active               
      td(style='text-align:center') 
        button#btnSetP2Timing.btn.btn-block.btn-warning Set
      td(style='text-align:center') Active               
      td(style='text-align:center') 
        button#btnSetP3Timing.btn.btn-block.btn-warning Set
      td(style='text-align:center') Active               
      td(style='text-align:center') 
        button#btnSetP4Timing.btn.btn-block.btn-warning Set
    tr
      td 2-step Pulser?
      td(style='text-align:right') False
      td(style='text-align:right')
        input(type='number')
      td(style='text-align:right') False
      td(style='text-align:right')
        input(type='number')
      td(style='text-align:right') True
      td(style='text-align:right')
        input(type='number')
      td(style='text-align:right') True
      td(style='text-align:right')
        input(type='number')

    each val in ["Charge Start", "Step 1 End", "Step 2 Start", "Charge Stop", "Discharge Start", "Discharge End"]
      +row(val)

    each val in ["RF Width", "RF 1 Delay", "RF 2 Delay", "RF 3 Delay", "RF 4 Delay"]
      +row(val)

    each val in ["Spare IO width", "Spare IO Delay"]
      +row(val)
