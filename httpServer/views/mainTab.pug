// First tab
#mainTab.tab-pane.fade.in.show.active.container.mainTabBG(role='tabpanel')

  .row
    .col-6
      p Pulsing control
      .row.mb-2.mt-2
        .col-3
          button#btnStop.btn.btn-fill.btn-danger Stop
        .col-5
          .row.mb-3
            .col-6
              button#btnInternal.btn.btn-block.btn-info Internal
            .col-6
              select#internalMode.combobox(name='internalMode')
                option(value="Single") Single
                option(value="1 Hz") 1 Hz
                option(value="5 Hz") 5 Hz
                option(value="10 Hz") 10 Hz
                option(value="Burst", selected="") Burst

          .row
            .col-6
              button#btnExternal.btn.btn-block.btn-success External

        .col-4
          .text-center.pulseModeBox
            | State:
            br
            label#lblPulsingState External
    .col-6
      p Voltages and currents
      .row
        #lastCVPlot(style='width:100%; height:93%;')
      .row
        .col-1
          | PVOS
        .col-5
          progress.progress-bar#pbPVOS(value='22', max='30')
        .col-1
          | NVOS
        .col-5
          progress.progress-bar#pbNVOS(value='22', max='30')
      .row
        .col-1
          | PVSS
        .col-5
          progress.progress-bar#pbPVSS(value='22', max='30')
        .col-1
          | NVSS
        .col-5
          progress.progress-bar#pbNVSS(value='22', max='30')
      .row
        .col-1
          | PVFS
        .col-5
          progress.progress-bar#pbPVFS(value='22', max='30')
        .col-1
          | NVFS
        .col-5
          progress.progress-bar#pbNVFS(value='22', max='30')

